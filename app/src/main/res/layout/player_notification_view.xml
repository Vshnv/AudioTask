<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/player_gradient"
    android:gravity="center"
    android:padding="5dp">
    <ImageView
        android:id="@+id/audio_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icons_music"
        android:layout_weight="0.1">
    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/audio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textFontWeight="800"
                    android:text="Radioactive">
                </TextView>
                <TextView
                    android:id="@+id/audio_artist"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:text="Imagine Dragons">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="0.5">
                <ImageButton
                    android:id="@+id/btn_prev"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/icons_previous" />
                <ImageButton
                    android:id="@+id/btn_play"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:src="@drawable/icons_play" />
                <ImageButton
                    android:id="@+id/btn_next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/icons_next" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>